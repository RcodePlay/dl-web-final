{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "typescript", "jest"],
    "baseUrl": "src",
    "paths": {
      "@middleware/*": ["interface/middleware/*"],
      "@routes/*": ["interface/routes/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node-dev": {
        "esm": true,
        "compiler": "typescript",
        "compilerOptions": {
          "module": "ESNext",
          "moduleResolution": "Node",
        }
      }
}