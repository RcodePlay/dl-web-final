{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "typescript", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node-dev": {
        "esm": true,
        "compiler": "typescript",
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "NodeNext"
        }
      }
}